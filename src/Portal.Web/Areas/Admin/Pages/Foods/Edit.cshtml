@page
@using Portal.Common.Enums
@model Portal.Web.Areas.Admin.Pages.Foods.EditModel
@{
    ViewData["title"] = "Edit";
    //var foodTypeSelect = new SelectList(Portal.Common.Enums.FoodType.GetAll(), "Id", "Name");
}

<form method="post">
    <input asp-for="Id" hidden/>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PriceAmount"></label>
        <input asp-for="PriceAmount" type="text" class="form-control">
        <span asp-validation-for="PriceAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FoodType"></label>
        <select asp-for="FoodType" asp-items="@Html.GetEnumSelectList<FoodType>()" class="form-control"></select>
        <span asp-validation-for="FoodType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
</form>